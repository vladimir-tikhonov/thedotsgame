{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "importHelpers": true,
    "sourceMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
        "config/*": [
            "../config/*"
        ]
    },

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
      "src/**/*",
      "config/**/*",
      "typings/**/*"
  ]
}
