{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
        "config/*": [
            "../config/*"
        ],
        "test/*": [
            "../test/*"
        ],
    },

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
      "src/**/*",
      "config/**/*",
      "tests/**/*",
      "typings/**/*",
  ],
}
